@model Product;

<div class="text-start">
    <a asp-action="Index" class="btn btn-dark my-3">Back</a>
</div>

<div class="card text-center">
    <h5 class="card-header">Product Information</h5>
    <div class="card-body">
        @if(Model.Discount > 0)
        {
            <div>
                <span class="badge bg-primary">SALE</span>
            </div>
        }
        <h5 class="card-title fs-1">@Model.Name</h5>
        <p class="card-text fs-4">@Model.Price$ - @Model.Category</p>
        <a href="#" class="btn btn-success my-3">Buy</a>
        <div>
            <img src="@Model.ImageUrl" alt="Product Image" />
        </div>
        <p class="card-text">@Model.Description</p>
    </div>
</div>