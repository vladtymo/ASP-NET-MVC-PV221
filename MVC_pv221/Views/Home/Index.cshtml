@* Razor Syntax: @{ code } if for switch ... *@
<div class="text-center">
    @if(DateTime.Now.Minute % 2 == 0)
    {
        <p>Minute is even!</p>
    }
    else
    {
        <p>Minute is odd!</p>
    }

